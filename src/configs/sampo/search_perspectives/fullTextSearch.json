        {
            "id": "type",
            "valueType": "object",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 300
        },
        {
            "id": "note",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "minWidth": 400,
            "collapsedMaxWords": 4
        }
