        "useAuth": false,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesFullTextSearch.js",
    "propertiesQueryBlock": "fullTextSearchProperties",
    "hideCardOnFrontPage": true,
    "hideTopPerspectiveButton": true,
